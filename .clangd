Diagnostics:
  UnusedIncludes: Strict           # Warn about unused includes
  Suppress:
    - "system-headers"             # Ignore warnings from system header files

CompileFlags:
  Add:
    - "-std=gnu++17"               # Parse with GNU++17 standard
    - "-Wall"                      # Basic warnings
    - "-Wextra"                    # More strict warnings
    - "-Wpedantic"                 # Warn on nonstandard code
    - "-Wconversion"               # Warn on implicit narrowing conversions

InlayHints:
  Enabled: true                    # Show inline type hints

Index:
  Background: Build                # Background indexing
  StandardLibrary: Yes             # Index STL and system headers
